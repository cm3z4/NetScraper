<div class="row">
  <div class="col-12" align="right">
    <div class="btn-group" id="scrape-clear-btn" role="group" aria-label="Scrape or Clear">
      <button type="button" class="btn btn-info">Scrape</button>
      <button type="button" class="btn btn-info">Clear</button>
    </div>
  </div>
</div>

<section>
  <!-- Articles.  -->
  {{#each articles}}
  <div class="card shadow m-3" style="width: 600px;">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{summary}}</p>
      <p class="card-text"><a>{{link}}</a></p>
    </div>
  </div>
  {{/each}}
</section>